{
  "name": "my-blog-hub",
  "version": "1.0.0",
  "description": "A modern blogging platform built with Node.js, Express, MongoDB, and EJS.",
  "main": "app.js",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/style.css --minify",
    "watch:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"nodemon app.js\"",
    "start": "node app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
