<!DOCTYPE html>
<html lang="en">

<head>
  <title>All Blogs - MyBlog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  
</head>

<body>
  <%- include("partials/navbar") %>

  <!-- Search Bar -->
  <form class="search-bar" action="/blogs/search" method="GET">
    <div class="input-group">
      <input type="text" name="query" class="form-control" placeholder="Search blogs by category, title, or tags..." required>
      <button class="btn btn-primary">Search</button>
    </div>
  </form>

 

  <!-- All Blogs Section -->
  <div class="container my-5">
    <h2 class="text-center mb-4">ðŸ“š All Blogs</h2>
    <%- include("partials/alerts") %>

    <div class="row">
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
              <img src="/images/uploads/<%= post.thumbnail || 'default.webp' %>" class="card-img-top" style="height:200px; object-fit:cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= post.title %></h5>
                <% if(post.category){ %>
                  <a href="/blogs/category/<%= post.category %>" class="category-badge"><%= post.category %></a>
                <% } %>
                <p class="card-text text-muted mt-2"><%= post.content.substring(0, 100) %>...</p>
                <a href="/blogs/<%= post._id %>" class="btn btn-outline-primary mt-auto">Read More</a>
              </div>
              <div class="card-footer small text-muted">
                By <a href="/user/<%= post.user._id %>"><%= post.user.name %></a> | <%= post.createdAt.toDateString() %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-muted">
          No blogs yet. Be the first to <a href="/blogs/create">create one</a>!
        </p>
      <% } %>
    </div>
  </div>

  <%- include("partials/footer") %>
</body>

</html>
