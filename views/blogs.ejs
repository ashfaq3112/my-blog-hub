<!DOCTYPE html>
<html lang="en">

<head>
  <title>All Blogs - MyBlog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include("partials/navbar") %>
  <form class="mb-4 " style="width: 1/3;" action="/blogs/search" method="GET">
  <div class="input-group " style="width:500px;">
    <input type="text" name="query" class="form-control" placeholder="Search blogs by category, title, or tags..." required>
    <button class="btn btn-primary">Search</button>
  </div>
</form>


    <div class="container my-5">
      <h2 class="text-center mb-4">ðŸ“š All Blogs</h2>
      <%- include("partials/alerts") %>

        <div class="row">
          <% if (posts && posts.length> 0) { %>
            <% posts.forEach(post=> { %>
              <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                  <img src="/images/uploads/<%= post.thumbnail || 'default.webp' %>" class="card-img-top"
                    style="height:200px; object-fit:cover;">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                      <%= post.title %>
                    </h5>
                    <p>
                      <strong>Category:</strong>
                      <a href="/category/<%= post.category %>" class="text-decoration-none">
                        <%= post.category %>
                      </a>
                      </p>

                      <p class="card-text text-muted">
                        <%= post.content.substring(0, 100) %>...
                      </p>
                      <a href="/blogs/<%= post._id %>" class="btn btn-outline-primary mt-auto">Read More</a>
                  </div>
                  <div class="card-footer small text-muted">
                    By <%= post.user.name %> | <%= post.createdAt.toDateString() %>
                  </div>
                </div>
              </div>
              <% }) %>
                <% } else { %>
                  <p class="text-center text-muted">
                    No blogs yet. Be the first to <a href="/blogs/create">create one</a>!
                  </p>
                  <% } %>
        </div>
    </div>

    <%- include("partials/footer") %>
</body>

</html>