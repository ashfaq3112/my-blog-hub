<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= profileUser.name %> - Public Profile | MyBlog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background-color: #1a202c;
      background-image: radial-gradient(at 0% 0%, hsla(218, 59%, 51%, 0.15) 0, transparent 50%),
                        radial-gradient(at 100% 100%, hsla(218, 59%, 51%, 0.15) 0, transparent 50%);
    }
  </style>
</head>

<body class="text-gray-100">
  <%- include("partials/navbar") %>

  <div class="container mx-auto px-6 py-20 max-w-4xl z-10 relative">
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-8 gradient-text" data-aos="fade-down">üë§ <%= profileUser.name %>'s Profile</h1>
    
    <div class="glass rounded-3xl shadow-2xl mb-12 p-8 lg:p-12 text-center" data-aos="fade-up">
      <div class="flex flex-col items-center">
        <img src="<%= profileUser.profilepic ? '/images/uploads/' + profileUser.profilepic : '/images/default-profile.png' %>"
          alt="Profile Picture" class="w-28 h-28 md:w-40 md:h-40 rounded-full object-cover border-4 border-white/20 mb-6">
      </div>

      <h3 class="text-3xl font-bold gradient-text"><%= profileUser.name %></h3>
      <p class="text-gray-400 text-sm mt-1"><%= profileUser.bio || "No bio available." %></p>
      <p class="mt-4 text-sm text-gray-400">
        <strong id="followersCount" data-modal-target="followersModal" class="cursor-pointer hover:underline">
          Followers: <%= profileUser.followers.length %>
        </strong> |
        <strong id="followingCount" data-modal-target="followingModal" class="cursor-pointer hover:underline">
          Following: <%= profileUser.following.length %>
        </strong>
      </p>

      <% if (currentUser && currentUser._id.toString() !== profileUser._id.toString()) { %>
        <button id="followBtn" data-user-id="<%= profileUser._id %>"
          class="mt-6 px-6 py-3 rounded-full font-bold transition-all duration-300
            <%= currentUser.following.some(u => u._id.toString() === profileUser._id.toString()) 
              ? 'bg-gradient-to-r from-blue-600 to-purple-600 text-white hover:scale-105 hover:shadow-lg' 
              : 'glass text-white hover:bg-white/20 hover:scale-105' %>">
          <%= currentUser.following.some(u => u._id.toString() === profileUser._id.toString()) ? 'Unfollow' : 'Follow' %>
        </button>
      <% } %>
    </div>

    <div class="glass rounded-3xl shadow-2xl mb-8 p-6" data-aos="fade-up" data-aos-delay="200">
      <h4 class="text-2xl font-bold text-center mb-6 gradient-text">
        <%= profileUser.name %>'s Blogs (<%= profileUser.posts.length %>)
      </h4>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="glass rounded-2xl p-4">
          <h5 class="text-lg text-gray-300">Total Blogs</h5>
          <h3 class="text-4xl font-extrabold gradient-text mt-2"><%= totalBlogs %></h3>
        </div>
        <div class="glass rounded-2xl p-4">
          <h5 class="text-lg text-gray-300">Total Likes</h5>
          <h3 class="text-4xl font-extrabold gradient-text mt-2"><%= totalLikes %></h3>
        </div>
        <div class="glass rounded-2xl p-4">
          <h5 class="text-lg text-gray-300">Most Popular Blog</h5>
          <% if (mostPopularBlog) { %>
            <a href="/blogs/<%= mostPopularBlog._id %>" class="text-blue-400 font-semibold hover:underline mt-2 inline-block">
              <%= mostPopularBlog.title %>
            </a>
            <p class="text-sm text-gray-400"><%= mostPopularBlog.likes.length %> ‚ù§Ô∏è</p>
          <% } else { %>
            <p class="text-gray-400 mt-2">None</p>
          <% } %>
        </div>
      </div>
    </div>
    
    <h4 class="text-2xl font-bold mb-6 gradient-text" data-aos="fade-right">Blog Posts</h4>
    <% if (profileUser.posts.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% profileUser.posts.forEach((post, index) => { %>
          <div class="glass rounded-3xl shadow-xl overflow-hidden flex flex-col h-full transform transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/20" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
            <a href="/blogs/<%= post._id %>" class="relative">
              <% if (post.thumbnail) { %>
                <img src="/images/uploads/<%= post.thumbnail %>" class="w-full h-48 object-cover transition-transform duration-300 hover:scale-110" alt="<%= post.title %>">
              <% } %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            </a>
            <div class="p-6 flex-1 flex flex-col">
              <h5 class="text-xl font-semibold mb-2 text-white">
                <a href="/blogs/<%= post._id %>" class="hover:text-blue-400 transition-colors"><%= post.title %></a>
              </h5>
              <% if (post.category) { %>
                <a href="/blogs/category/<%= post.category %>" class="inline-block px-3 py-1 text-xs font-semibold rounded-full mb-3 glass border border-white/20 text-white hover:bg-white/20 transition-colors">
                  #<%= post.category %>
                </a>
              <% } %>
              <p class="text-gray-400 mb-4 flex-1 line-clamp-3"><%= post.content.substring(0, 80) %>...</p>
              <div class="flex items-center justify-between">
                <a href="/blogs/<%= post._id %>" class="inline-block text-blue-400 font-medium hover:underline transition-colors">
                  Read More ‚Üí
                </a>
                <div class="flex items-center space-x-4 text-sm text-gray-400">
                  <span class="flex items-center">‚ù§Ô∏è <%= post.likes.length %></span>
                  <span class="flex items-center">üí¨ <%= post.comments.length %></span>
                </div>
              </div>
            </div>
            <div class="px-6 py-4 glass border-t border-white/10 text-sm text-gray-400">
              Created on <%= post.createdAt.toDateString() %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-400 py-12 glass p-12 rounded-3xl">No blogs yet.</p>
    <% } %>
  </div>

  <div id="followersModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen">
      <div class="bg-slate-900/80 backdrop-blur-lg rounded-3xl p-8 w-full max-w-sm mx-4 shadow-xl border border-white/10">
        <div class="flex justify-between items-center pb-4 border-b border-gray-700">
          <h5 class="text-xl font-bold gradient-text">Followers</h5>
          <button class="modal-close-btn text-gray-400 hover:text-white" data-modal-close="followersModal">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          </button>
        </div>
        <div class="mt-4 max-h-64 overflow-y-auto space-y-4">
          <% if (profileUser.followers.length > 0) { %>
            <ul class="list-none space-y-3">
              <% profileUser.followers.forEach(f => { %>
                <li class="flex items-center">
                  <img src="<%= f.profilepic ? '/images/uploads/' + f.profilepic : '/images/default-profile.png' %>"
                       class="w-10 h-10 rounded-full object-cover mr-4 border-2 border-purple-400">
                  <a href="/user/<%= f._id %>" class="text-white hover:text-blue-400 font-semibold"><%= f.name %></a>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-400">No followers yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div id="followingModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen">
      <div class="bg-slate-900/80 backdrop-blur-lg rounded-3xl p-8 w-full max-w-sm mx-4 shadow-xl border border-white/10">
        <div class="flex justify-between items-center pb-4 border-b border-gray-700">
          <h5 class="text-xl font-bold gradient-text">Following</h5>
          <button class="modal-close-btn text-gray-400 hover:text-white" data-modal-close="followingModal">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          </button>
        </div>
        <div class="mt-4 max-h-64 overflow-y-auto space-y-4">
          <% if (profileUser.following.length > 0) { %>
            <ul class="list-none space-y-3">
              <% profileUser.following.forEach(f => { %>
                <li class="flex items-center">
                  <img src="<%= f.profilepic ? '/images/uploads/' + f.profilepic : '/images/default-profile.png' %>"
                       class="w-10 h-10 rounded-full object-cover mr-4 border-2 border-purple-400">
                  <a href="/user/<%= f._id %>" class="text-white hover:text-blue-400 font-semibold"><%= f.name %></a>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-400">Not following anyone yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/footer") %>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>AOS.init({ duration: 1000, once: true });</script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('[data-modal-target]').forEach(button => {
        button.addEventListener('click', () => {
          const modalId = button.getAttribute('data-modal-target');
          const modal = document.getElementById(modalId);
          modal.classList.remove('hidden');
        });
      });

      document.querySelectorAll('.modal-close-btn').forEach(button => {
        button.addEventListener('click', () => {
          const modalId = button.getAttribute('data-modal-close');
          const modal = document.getElementById(modalId);
          modal.classList.add('hidden');
        });
      });
    });
  </script>
  <script src="/js/follow.js"></script>
</body>

</html>