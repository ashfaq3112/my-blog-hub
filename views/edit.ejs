<!DOCTYPE html>
<html lang="en">
<head>
  <title>Edit Post - MyBlog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include("partials/navbar") %>

  <div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width:600px; width:100%;">
      <h3 class="text-center mb-4">✏️ Edit Post</h3>
      <%- include("partials/alerts") %>
      <form action="/blogs/update/<%= post._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label>Title</label>
          <input type="text" name="title" value="<%= post.title %>" class="form-control" required>
        </div>
        <div class="mb-3">
          <label>Content</label>
          <textarea name="content" rows="6" class="form-control" required><%= post.content %></textarea>
        </div>
        <div class="mb-3">
          <label>Tags</label>
          <input type="text" name="tags" value="<%= post.tags.join(', ') %>" class="form-control">
        </div>
        <div class="mb-3">
          <label>Current Thumbnail</label><br>
          <img src="/uploads/<%= post.thumbnail || 'default-blog.jpg' %>" class="img-fluid mb-2" style="max-height:200px;">
          <input type="file" name="thumbnail" class="form-control">
        </div>
        <button class="btn btn-warning w-100">Update Post</button>
      </form>
    </div>
  </div>

  <%- include("partials/footer") %>
</body>
</html>
