<!DOCTYPE html>
<html lang="en">

<head>
  <title>Edit Profile | MyBlog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <style>
    body {
      background-color: #1a202c;
      background-image: radial-gradient(at 0% 0%, hsla(218, 59%, 51%, 0.15) 0, transparent 50%),
                        radial-gradient(at 100% 100%, hsla(218, 59%, 51%, 0.15) 0, transparent 50%);
    }
  </style>
</head>

<body class="bg-gradient-to-br from-gray-950 via-purple-950 to-gray-950 text-gray-200 overflow-x-hidden">
  <%- include("partials/navbar") %>

  <div class="container mx-auto px-4 py-10 mt-10 flex justify-center items-center">
    <div class="bg-gray-800 rounded-3xl shadow-2xl p-8 lg:p-12 w-full max-w-xl" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-extrabold text-center mb-6 text-blue-400">✏️ Edit Profile</h2>

      <%- include("partials/alerts") %>

      <form action="/user/editprofile" method="POST" enctype="multipart/form-data" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-300 mb-1">Name</label>
          <input type="text" id="name" name="name" class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= user.name %>" required>
        </div>
        <div>
          <label for="username" class="block text-sm font-medium text-gray-300 mb-1">Username</label>
          <input type="text" id="username" name="username" class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= user.username %>" required>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
          <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= user.email %>" required>
        </div>
        <div>
          <label for="bio" class="block text-sm font-medium text-gray-300 mb-1">Bio</label>
          <textarea id="bio" name="bio" class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" rows="3" placeholder="Write something about yourself..."><%= user.bio %></textarea>
        </div>
        <div>
          <label for="profilepic" class="block text-sm font-medium text-gray-300 mb-1">Profile Picture</label>
          <% if (user.profilepic) { %>
            <div class="mb-4">
              <img src="/images/uploads/<%= user.profilepic %>" class="rounded-full w-24 h-24 object-cover border-2 border-gray-600" alt="Current Profile Picture" >
            </div>
          <% } %>
          <label class="w-full text-white cursor-pointer bg-gray-700 border border-gray-600 rounded-lg focus-within:ring-2 focus-within:ring-blue-500 hover:bg-gray-600 transition-colors duration-200">
            <span class="px-5 py-4 w-1/3">Choose a new file...</span>
            <input type="file" id="profilepic" name="profilepic" class="sr-only w-full">
          </label>
        </div>
        <div class="flex justify-between gap-4">
          <button type="submit" class="flex-1 px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-500 transition-colors">
            Update Profile
          </button>
          <a href="/user/profile" class="flex-1 px-4 py-3 text-center bg-gray-600 text-white font-semibold rounded-lg shadow-lg hover:bg-gray-500 transition-colors">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>

  <%- include("partials/footer") %>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>AOS.init({ duration: 1000, once: true });</script>
</body>

</html>