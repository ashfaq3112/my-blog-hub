<!DOCTYPE html>
<html lang="en">
<head>
  <title>Edit Profile - MyBlog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include("partials/navbar") %>

  <div class="container mt-5">
    <h2 class="mb-4">Edit Profile</h2>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <form action="/user/editprofile" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>" required>
      </div>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" required>
        </div>

      <div class="mb-3">
        <label for="bio" class="form-label">Bio</label>
        <textarea id="bio" name="bio" class="form-control" rows="3" placeholder="Write something about yourself..."><%= user.bio %></textarea>
      </div>

      <div class="mb-3">
        <label for="profilepic" class="form-label">Profile Picture</label>
        <% if (user.profilepic) { %>
          <div class="mb-2">
            <img src="/images/uploads/<%= user.profilepic %>" class="rounded-circle" style="width:100px;height:100px;object-fit:cover;">
          </div>
        <% } %>
        <input type="file" id="profilepic" name="profilepic" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary">Update Profile</button>
      <a href="/user/profile" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>
