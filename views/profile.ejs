<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Profile | MyBlog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background-color: #1a202c;
      background-image: radial-gradient(at 0% 0%, hsla(218, 59%, 51%, 0.15) 0, transparent 50%),
        radial-gradient(at 100% 100%, hsla(218, 59%, 51%, 0.15) 0, transparent 50%);
    }
  </style>
</head>

<body class="bg-gradient-to-br from-gray-950 via-purple-950 to-gray-950 text-gray-200 overflow-x-hidden">
  <%- include("partials/navbar") %>

  <div class="container mx-auto px-6 py-20 max-w-4xl z-10 relative">
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-8 gradient-text" data-aos="fade-down">üë§ My Profile</h1>
    <%- include("partials/alerts") %>

    <div class="glass rounded-3xl shadow-2xl mb-12 p-8 lg:p-12 text-center" data-aos="fade-up">
      <div class="flex flex-col items-center">
        <img src="<%= user.profilepic ? '/images/uploads/'+ user.profilepic : '/images/default-profile.png' %>"
          alt="Profile Picture"
          class="w-28 h-28 md:w-40 md:h-40 rounded-full object-cover border-4 border-white/20 mb-6">

        <h3 class="text-3xl font-bold gradient-text">
          <%= user.name %>
        </h3>

        <!-- Followers Modal -->
        <div id="followersModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
          <div class="flex items-center justify-center min-h-screen">
            <div
              class="bg-slate-900/80 backdrop-blur-lg rounded-3xl p-8 w-full max-w-sm mx-4 shadow-xl border border-white/10">
              <div class="flex justify-between items-center pb-4 border-b border-gray-700">
                <h5 class="text-xl font-bold gradient-text">Followers</h5>
                <button class="modal-close-btn text-gray-400 hover:text-white" data-modal-close="followersModal">
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
              <div class="mt-4 max-h-64 overflow-y-auto space-y-4">
                <% if (user.followers.length > 0) { %>
                  <ul class="list-none space-y-3">
                    <% user.followers.forEach(f => { %>
                      <li class="flex items-center">
                        <img src="<%= f.profilepic ? '/images/uploads/' + f.profilepic : '/images/default-profile.png' %>"
                          class="w-10 h-10 rounded-full object-cover mr-4 border-2 border-purple-400">
                        <a href="/user/<%= f._id %>" class="text-white hover:text-blue-400 font-semibold">
                          <%= f.name %>
                        </a>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p class="text-gray-400">No followers yet.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Following Modal -->
        <div id="followingModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
          <div class="flex items-center justify-center min-h-screen">
            <div
              class="bg-slate-900/80 backdrop-blur-lg rounded-3xl p-8 w-full max-w-sm mx-4 shadow-xl border border-white/10">
              <div class="flex justify-between items-center pb-4 border-b border-gray-700">
                <h5 class="text-xl font-bold gradient-text">Following</h5>
                <button class="modal-close-btn text-gray-400 hover:text-white" data-modal-close="followingModal">
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
              <div class="mt-4 max-h-64 overflow-y-auto space-y-4">
                <% if (user.following.length > 0) { %>
                  <ul class="list-none space-y-3">
                    <% user.following.forEach(f => { %>
                      <li class="flex items-center">
                        <img src="<%= f.profilepic ? '/images/uploads/' + f.profilepic : '/images/default-profile.png' %>"
                          class="w-10 h-10 rounded-full object-cover mr-4 border-2 border-purple-400">
                        <a href="/user/<%= f._id %>" class="text-white hover:text-blue-400 font-semibold">
                          <%= f.name %>
                        </a>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p class="text-gray-400">Not following anyone yet.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <p class="text-gray-400 text-sm mt-1">@<%= user.username %></p>
        <p class="text-gray-300 mt-4 max-w-xl">
          <%= user.bio || "This user has no bio yet." %>
        </p>

        <!-- Followers / Following Buttons -->
        <div class="flex gap-6 mt-4 text-gray-400 text-sm">
          <button data-modal-target="followersModal" class="hover:text-blue-400 font-semibold">
            Followers (<%= user.followers.length %>)
          </button>
          <button data-modal-target="followingModal" class="hover:text-blue-400 font-semibold">
            Following (<%= user.following.length %>)
          </button>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-6 text-sm text-gray-300 max-w-md w-full">
          <p><strong class="text-gray-200">Email:</strong> <%= user.email %></p>
          <p><strong class="text-gray-200">Age:</strong> <%= user.age %></p>
          <p><strong class="text-gray-200">Role:</strong>
            <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
          </p>
        </div>
      </div>

      <div class="flex justify-center flex-wrap gap-4 mt-8">
        <a href="/user/edit"
          class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl text-white font-bold shadow-lg hover:scale-105 transform transition-all duration-300">
          Edit Profile
        </a>
        <a href="/user/profilepicture"
          class="px-6 py-3 glass rounded-xl text-white font-semibold hover:bg-white/20 hover:scale-105 transform transition-all duration-300">
          Change Profile Picture
        </a>
      </div>
    </div>

    <!-- Blogs Summary -->
    <div class="glass rounded-3xl shadow-2xl mb-8 p-6" data-aos="fade-up" data-aos-delay="200">
      <h4 class="text-2xl font-bold text-center mb-6 gradient-text">
        <%= user.name %>'s Blogs (<%= user.posts.length %>)
      </h4>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="glass rounded-2xl p-4">
          <h5 class="text-lg text-gray-300">Total Blogs</h5>
          <h3 class="text-4xl font-extrabold gradient-text mt-2"><%= totalBlogs %></h3>
        </div>
        <div class="glass rounded-2xl p-4">
          <h5 class="text-lg text-gray-300">Total Likes</h5>
          <h3 class="text-4xl font-extrabold gradient-text mt-2"><%= totalLikes %></h3>
        </div>
        <div class="glass rounded-2xl p-4">
          <h5 class="text-lg text-gray-300">Most Popular Blog</h5>
          <% if (mostPopularBlog) { %>
            <a href="/blogs/<%= mostPopularBlog._id %>" class="text-blue-400 font-semibold hover:underline mt-2 inline-block">
              <%= mostPopularBlog.title %>
            </a>
            <p class="text-sm text-gray-400"><%= mostPopularBlog.likes.length %> ‚ù§Ô∏è</p>
          <% } else { %>
            <p class="text-gray-400 mt-2">None yet</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Blogs List -->
    <h2 class="text-2xl md:text-3xl font-bold mb-6 gradient-text" data-aos="fade-right">üìù My Blogs</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% if (user.posts && user.posts.length > 0) { %>
        <% user.posts.forEach((post, index) => { %>
          <div
            class="glass rounded-3xl shadow-xl overflow-hidden flex flex-col h-full transform transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/20"
            data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
            <a href="/blogs/<%= post._id %>" class="relative">
              <img src="/images/uploads/<%= post.thumbnail || 'default-blog.jpg' %>"
                class="w-full h-48 object-cover transition-transform duration-300 hover:scale-110"
                alt="<%= post.title %>">
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            </a>
            <div class="p-6 flex-1 flex flex-col">
              <h5 class="text-xl font-semibold mb-2 text-white"><%= post.title %></h5>
              <p class="text-gray-400 mb-4 flex-1 line-clamp-3"><%= post.content.substring(0, 80) %>...</p>
              <div class="flex items-center justify-between">
                <a href="/blogs/<%= post._id %>" class="inline-block text-blue-400 font-medium hover:underline transition-colors">
                  View ‚Üí
                </a>
                <div class="flex items-center space-x-4 text-sm text-gray-400">
                  <a href="/blogs/edit/<%= post._id %>" class="text-yellow-400 hover:underline">Edit</a>
                  <a href="/blogs/delete/<%= post._id %>" class="text-red-400 hover:underline"
                    onclick="return confirm('Are you sure you want to delete this blog?')">Delete</a>
                </div>
              </div>
            </div>
            <div class="px-6 py-4 glass border-t border-white/10 text-sm text-gray-400">
              Created on <%= post.createdAt.toDateString() %>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="col-span-full text-center py-12 glass rounded-3xl p-12">
          You haven‚Äôt written any blogs yet.
          <a href="/blogs/create" class="text-blue-400 font-semibold hover:underline">Create one</a>!
        </p>
      <% } %>
    </div>
  </div>

  <%- include("partials/footer") %>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>AOS.init({ duration: 1000, once: true });</script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('[data-modal-target]').forEach(button => {
        button.addEventListener('click', () => {
          const modalId = button.getAttribute('data-modal-target');
          const modal = document.getElementById(modalId);
          modal.classList.remove('hidden');
        });
      });

      document.querySelectorAll('.modal-close-btn').forEach(button => {
        button.addEventListener('click', () => {
          const modalId = button.getAttribute('data-modal-close');
          const modal = document.getElementById(modalId);
          modal.classList.add('hidden');
        });
      });

      // Optional: Close modal when clicking outside content
      document.querySelectorAll('.fixed').forEach(modal => {
        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            modal.classList.add('hidden');
          }
        });
      });
    });
  </script>
  <script src="/js/follow.js"></script>
</body>
</html>
